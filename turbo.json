{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "REDIS_URL",
        "TURSO_AUTH_TOKEN",
        "TURSO_DATABASE_URL"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".output/**",
                ".nuxt/**"
            ]
        },
        "test": {},
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "generate": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        }
    }
}